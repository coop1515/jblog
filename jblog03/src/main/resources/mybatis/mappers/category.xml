<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
<insert id = "insert" parameterType="uservo">
		<![CDATA[
			insert into category values (null,'firstCategory','첫 카테고리입니다.', #{id})
		]]>
		
	</insert>
	
	<select id = "findByIDAndNo" parameterType="map" resultType ="categoryvo">
	<choose>
			<when test='no == 0'>
				select * from category where blog_id = #{id}
			</when>
			<otherwise>
				select * from category where blog_id = #{id} and no = #{no}
			</otherwise>
		</choose>
	</select>
</mapper>